
# Common Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
DEBUG_MODE=false

# Model Names
EMBEDDING_MODEL=text-embedding-ada-002
LLM_MODEL=gpt-4o-2024-11-20

# API Provider Selection
USE_AZURE_OPENAI=false

# Standard OpenAI Configuration
OPENAI_API_KEY=open-ai-key

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_VERSION=2023-05-15

# Azure Deployments (the deployment names you created in Azure portal)
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your_embedding_deployment_name
AZURE_OPENAI_LLM_DEPLOYMENT=your_llm_deployment_name


# Azure AD Authentication
AD_TENANT_ID=your_tenant_id
AD_CLIENT_ID=your_client_id
OPEN_AI_CERTIFICATE_PATH=/path/to/your/certificate.pem

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_VERSION=2023-05-15

# Azure Deployments
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your_embedding_deployment_name
AZURE_OPENAI_LLM_DEPLOYMENT=your_llm_deployment_name

HTTP_PROXY=http://your-proxy:port
HTTPS_PROXY=http://your-proxy:port
NO_PROXY=localhost,127.0.0.1
